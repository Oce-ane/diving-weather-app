# frozen_string_literal: true

source 'https://rubygems.org'

# setup app
gem 'sinatra'
gem 'dotenv'
gem "sinatra-cross_origin", "~> 0.3.1"

# setup features
gem 'httparty'
gem 'json'

# setup a database
gem 'sinatra-activerecord'
gem 'pg'
gem 'pg_search'
gem 'rake'

# setup scrapper
gem 'nokogiri'
gem 'parallel'

# setup testing
group :test do
  gem 'rspec'
  gem 'rack-test'
end

group :test do
  gem 'capybara'
  gem 'selenium-webdriver'
end
