<body>
  <label class="switch">
    <input type="checkbox">
    <span class="slider round"></span>
  </label>
  <div class="container">
    <h1 class="app-title">🤿 Sea the conditions 🌊</h1>
    <form onsubmit="event.preventDefault(); search();">
      <input type="text" name="query" id="dive-site-search" placeholder="Search for a country or dive site" autocomplete="off">
      <button type="submit">Search</button>
    </form>

    <!--Map -->
    <div id="map"></div>

    <!-- Suggestions list -->
    <div id="suggestions"></div>

    <!-- Search results -->
    <div id="search-results"></div>

    <!-- Conditions -->
    <div id="conditions"></div>
  </div>
  <div class="footer">Made for watching 🐡 🪼 🐙 🐬 🦀 🪸 🐳</div>
  <script src="/javascripts/map.js"></script>
  <script src="/javascripts/themeToggle.js"></script>
</body>
